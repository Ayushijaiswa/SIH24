<!-- Bootstrap Progress Bar Example -->

<div class="tracking-container">
    <h1>Search And Rescue Dashboard</h1>
    
    <!-- Case Initiation Section -->
    <div class="tracking-item">
      <div class="item-header completed" onclick="toggleDetails(1)">
        <span>Case Initiation</span>
        <span class="arrow">▼</span>
      </div>
	  <div class="item-details" id="details-1">
        <ul>
          <li>✔ Report received</li>
          <li>✔ Preliminary assessment completed</li>
          <li>⏳ Assigning case officer</li>
        </ul>
      </div>
    </div>
	<div class="tracking-item">
		<div class="item-header in-progress" onclick="toggleDetails(2)">
		  <span>Data Consolidation</span>
		  <span class="arrow">▼</span>
		</div>
		<div class="item-details" id="details-2">
		  <ul>
			<li>✔ Gathering surveillance footage</li>
			<li>⏳ Analyzing communication records</li>
			<li>⏳ Collecting witness statements</li>
		  </ul>
		</div>
	  </div>
	  <div class="tracking-item">
		<div class="item-header pending" onclick="toggleDetails(3)">
		  <span>Search & Investigation</span>
		  <span class="arrow">▼</span>
		</div>
		<div class="item-details" id="details-3">
		  <p>Details of the search and investigation will be updated soon.</p>
		</div>
	  </div>
	  <!-- Recovery and Rescue Section -->
	  <div class="tracking-item">
		<div class="item-header pending" onclick="toggleDetails(4)">
		  <span>Recovery & Rescue</span>
		  <span class="arrow">▼</span>
		</div>
		<div class="item-details" id="details-4">
		  <p>No updates available yet.</p>
		</div>
	  </div>
	  <div class="tracking-item">
		<div class="item-header pending" onclick="toggleDetails(5)">
		  <span>Case Closure</span>
		  <span class="arrow">▼</span>
		</div>
		<div class="item-details" id="details-5">
		  <p>Case closure status will be updated once the process is complete.</p>
		</div>
	  </div>
	</div>
  
	<script src="script.js"></script>

  
	<script src="script.js"></script>


			<hr>
			<% if(currentUser) {%>
			<h4>Leave a Review</h4>
			<% } %>
			</div>

         <!-- reviews --> 
		 <% if(currentUser) {%>
			<form action="/listings/<%= listing.id %>/reviews" method="post" class="needs-validation" novalidate>
				<div class="col-6 offset-2" >

					<div  class="mt-2">
						<label for="rating" class="form-label">Rating:</label>
						<fieldset class="starability-slot">
							<input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
							<input type="radio" id="first-rate1" name="review[rating]" value="1" />
							<label for="first-rate1" title="Terrible">1 star</label>
							<input type="radio" id="first-rate2" name="review[rating]" value="2" />
							<label for="first-rate2" title="Not good">2 stars</label>
							<input type="radio" id="first-rate3" name="review[rating]" value="3" />
							<label for="first-rate3" title="Average">3 stars</label>
							<input type="radio" id="first-rate4" name="review[rating]" value="4" />
							<label for="first-rate4" title="Very good">4 stars</label>
							<input type="radio" id="first-rate5" name="review[rating]" value="5" />
							<label for="first-rate5" title="Amazing">5 stars</label>
						  </fieldset>
					<!-- <input type="range" min= 1 max="5" id="rating" name="review[rating]" class="form-range" > -->
					</div>

					<div  class="mb-3">
						<label for="comment" class="form-label"  >Comment:</label>
					<textarea name="review[comment]" id="comment" cols="30" rows="1" class="form-control" placeholder="..." required></textarea>
					<div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please add some comment.
                    </div>

					</div>
					<div  class="mb-3">
						<button class="btn btn-outline-dark">Submit</button>
					</div>
				</div>
			</form>
			<% } %>

			<div class="col-8 offset-2 mb-4"> <% if(currentUser) {%>
				<hr id="review-hr" style="display: none;"> <% } %>
				<div id="reviews-header" style="display: none;">
					<h4>All Reviews</h4>
				</div>
				
				<div class="reviews-container">
					<% for(let review of listing.reviews) { %>
						<div class="review-card">
							<p>@ <%- review.author.username  %></p>
							<!-- <div class="stars">
								<% for(let i = 0; i < 5; i++) { %>
									<% if(i < review.rating) { %>
										<span class="star filled">★</span>
									<% } else { %>
										<span class="star">★</span>
									<% } %>
								<% } %>
							</div> -->
							<p class="starability-result" data-rating = <%= review.rating %>></p>
							<p class="comment"><%= review.comment %></p>
							<% if(currentUser && currentUser._id.equals(review.author._id) ) { %>
								<form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" >
									<button type="submit" class="delete-btn">Delete</button>
								</form>
								<% } %>
						</div>
					<% } %>
				</div>
			</div>
		</div>	
</body>